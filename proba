<body>
    <div class="container">
        <div id="coins">Монеты: 0</div>
        <button id="clickButton" onclick="clickCoin()">Клик</button>
        <button id="adButton" onclick="watchAd()">Смотреть рекламу (+1000 монет)</button>
    </div>

    <script>
        let coins = 0;
        const coinsDisplay = document.getElementById('coins');

        function clickCoin() {
            coins++;
            updateCoins();
        }

        function watchAd() {
            coins += 1000;
            updateCoins();
        }

        function updateCoins() {
            coinsDisplay.textContent = 'Монеты: ' + coins;
        }
    </script>
</body>
